generator client {
  provider = "prisma-client-js"
  output   = "../client/mongo"
}

datasource mongodb {
  provider = "mongodb"
  url      = env("DATABASE_MONGO_URL")
}

model Comment {
  id         String   @id @default(auto()) @map("_id") @mongodb.ObjectId
  content    String
  author_id  String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("comment")
}
